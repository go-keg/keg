{{- /* gotype: github.com/go-keg/keg/cmd/keg/config.App */ -}}
key: "${APP_KEY}"
trace:
  endpoint: "${TRACE_ENDPOINT_URL}"
server:
  http:
    addr: 0.0.0.0:8080
    timeout: 30s
{{- if .UseGRPC}}
  grpc:
    addr: 0.0.0.0:9000
    timeout: 30s
{{end}}
data:
  database:
    driver: "mysql"
    dsn: "{{print "${" .DB.UpperCase "_DB_DSN}"}}"

log:
  dir: "./logs/"
  level: "debug"
  maxAge: 30       # day
  rotationTime: 1  # day